---
exclude_paths:
  # default paths
  - '.cache/'

  # The "converge" and "reset" playbooks use import_playbook in
  # conjunction with the "env" lookup plugin, which lets the
  # syntax check of ansible-lint fail.
  - 'provision/ansible/molecule/**/converge.yml'
  - 'provision/ansible/molecule/**/prepare.yml'
  - 'provision/ansible/molecule/**/reset.yml'

skip_list:
  - 'fqcn-builtins'
  - yaml[line-length]

# .ansible-lint
warn_list:
  - unnamed-task
